<h1>My laundry list</h1>
<ul>
  <% @tasks.each do |task| %>
    <li>
    <% if task.completed == true %>
    <i class="far fa-check-square"></i>
    <% else %>
    <i class="far fa-square"></i>
    <% end %>
    <%= link_to task.title, task_path(task) %>
    </li>
  <% end %>
</ul>
<%= link_to "Add a new task", "tasks/new" %>
